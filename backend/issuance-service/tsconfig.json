{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts",
    "src/data/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
